{
  "name": "poker-king-desktop",
  "version": "1.0.0",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "postinstall": "cd app && npm install || true",
    "start": "electron .",
    "build-client": "echo no-client",
    "dist": "electron-builder --win nsis --x64"
  },
  "devDependencies": {
    "electron": "^25.6.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.pokerking.desktop",
    "productName": "Poker King",
    "files": [
      "app/**",
      "electron-main.js",
      "node_modules/**"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}